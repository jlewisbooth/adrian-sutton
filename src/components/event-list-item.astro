---
const { title, date, location, compiledContent } = Astro.props;

const formattedDate = new Date(date);
---

<div
  class="flex flex-col gap-2 p-3 bg-primary text-white rounded-md drop-shadow-lg"
>
  <div class="flex flex-row items-center justify-between">
    <p class="font-bold">
      {
        formattedDate.toLocaleString("en-GB", {
          day: "2-digit",
          month: "2-digit",
          year: "2-digit",
        })
      }
    </p>
    <p class="font-bold">{location}</p>
  </div>
  <h4 class="font-bold">
    {title}
  </h4>
  <span class="font-light">
    <Fragment set:html={compiledContent} />
  </span>
</div>
