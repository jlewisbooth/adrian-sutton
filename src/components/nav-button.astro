---
const { href, title } = Astro.props;
const { pathname } = Astro.url;

const isActive = href === pathname;
---
<a href={href} class:list={[{ active: isActive }]}>
    <h4 class=`${isActive ? "text-contrast" : "text-primary"} hover:text-contrast transition-colors duration-200`>
        {title}
    </h4>
</a>
<style>
    a.active {
        font-weight: bold;
    }
</style>